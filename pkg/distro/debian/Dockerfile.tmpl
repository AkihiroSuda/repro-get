ARG BASE_IMAGE={{.BaseImage}} # {{.BaseImageOrig}}
ARG REPRO_GET_PROVIDER={{join .Providers ","}}

ARG REPRO_GET_VERSION={{.ReproGetVersion}}
ARG REPRO_GET_SHA256SUMS_SHA256SUM={{.ReproGetSHASHA}}
